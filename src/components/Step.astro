---
interface Props {
  step: string;
  img: string;
  description: string;
}

const { step, img, description } = Astro.props;
---

<div class="step" role="listitem">
  <p>{step}</p>
  <img src={img} alt={step} style={{aspectRatio: 1}} />
  <p>{description}</p>
</div>


<style>
  .step {
    position: relative;
  }

  .step::before {
    content: " ";
    position: absolute;
    background: linear-gradient(90deg, var(--primary-text), transparent);
    width: 100%;
    height: 3px;
  }

  .step p:first-of-type {
    font-size: 1.25rem;
    font-weight: bold;
    color: var(--secondary-text);
  }

  .step p:last-of-type {
    line-height: 1.5rem;
    opacity: 60%;
  }

  .step img {
    width: 100%;
  }
</style>