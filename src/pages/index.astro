---
import "../styles/global.css";

import Step from "../components/Step.astro";

import step1 from "../images/step1.svg";
import step2 from "../images/step2.svg";
import step3 from "../images/step3.svg";

import facebook from "../images/facebook.svg";
import twitter from "../images/twitter.svg";
import instagram from "../images/instagram.svg";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Marketplace - Event Planning made simple!</title>

    <style>
      body {
        margin: 0;
        margin-inline: 1rem;
        padding: 0;
        transition: all 1s ease-in-out;
      }

      header {
        display: grid;
        align-items: center;
        padding-block: 1.25rem;
        border-bottom: 1px solid #00000033;
      }

      main {
        padding-block: 3rem;
      }

      footer {
        display: grid;
        align-items: center;
        grid-template-areas: "logo social";
        grid-template-columns: 1fr max-content;
        padding-top: 2.5rem;
        border-top: 1px solid #000000;
      }

      .coming-soon {
        font-size: 1.25rem;
      }

      .title {
        font-size: 2.5rem;
        font-weight: bold;
      }

      .description {
        font-size: 1.25rem;
      }

      .subscribe-form {
        margin: 0 auto;
        background-color: #33333344;
        min-width: 20rem;
        justify-self: flex-end;
        padding-inline: 10dvw;
        padding-block: 4rem;
        box-shadow: 10px 10px 0px purple;
      }

      form {
        align-self: self-end;
      }

      form label {
        margin-bottom: 1rem;
        font-size: 1.25rem;
        display: inline-block;
      }

      input[type="email"] {
        border: 1px solid #000000;
        background-color: #f8f8f8;
        font-size: 1rem;
        padding: 0.5rem 1rem;
      }

      button[type="submit"] {
        background-color: #000000;
        border: none;
        font-weight: bold;
        color: #ffffff;
        padding-inline: 1rem;
      }

      .steps {
        max-width: 40rem;
        padding-inline: 1rem;
        margin: 0 auto;
        display: flex;
        align-items: center;
        flex-direction: column;
        gap: 2rem;
      }

      .steps :global(.step) {
        width: 60dvw;
      }

      @media screen and (min-width: 37rem) {
        body {
          margin: 0 auto;
          max-width: min(35rem, 90%);
        }
      }

      @media screen and (min-width: 60rem) {
        body {
          max-width: min(55rem, 70%);
        }

        .steps :global(.step) {
          width: unset;
        }

        .steps {
          display: grid;
          grid-template-columns: repeat(3, 1fr);
          align-items: flex-start;
          max-width: unset;
        }
      }

      @media screen and (min-width: 80rem) {
        body {
          margin: 0 auto;
          max-width: min(70rem, 70%);
        }

        .intro-cta {
          display: grid;
          gap: 3rem;
          grid-template-columns: 1fr auto;
        }

        .subscribe-form {
          padding: 0;
          min-width: 40ch;
          background-color: transparent;
          box-shadow: 0 0 0 transparent;
        }

        form label {
          margin-bottom: 0.5rem;
          font-size: 1rem;
        }
      }
    </style>
  </head>
  <body>
    <header>
      <img src="" alt="Marketplace logo" />
    </header>
    <main>
      <div class="intro-cta">
        <section>
          <p>Coming Soon!</p>
          <h1 class="title">Party planning made simple!<br />Period.</h1>
          <p class="description">
            From full-service party planning to individual elements, we've got
            you covered
          </p>
        </section>
        <form class="subscribe-form">
          <label for="email"> Sign up to know when we launch!</label>
          <div
            style={{
              display: "grid",
              gridTemplateColumns: "1fr auto",
              gap: "0.5rem",
            }}
          >
            <input
              type="email"
              required
              aria-required="true"
              name="email"
              placeholder="Enter your email"
            />
            <button type="submit">Subscribe</button>
          </div>
        </form>
      </div>
      <div style={{ marginBottom: "4rem" }}></div>
      <div class="steps" role="list">
        <Step
          step="1. Create an event"
          description="Submit your party needs with just a few clicks, whether a full party or just a cake."
          img={step1.src}
        />
        <Step
          step="2. Connect with providers"
          description="Relax as offers from quality vendors flow in."
          img={step2.src}
        />
        <Step
          step="3. Enjoy"
          description="Enjoy your celebration!"
          img={step3.src}
        />
      </div>
    </main>
    <footer>
      <img src="" alt="Marketplace logo" />
      <div
        style={{
          display: "grid",
          gridTemplateColumns: "1fr max-content",
          gap: "2rem",
          alignItems: "center",
        }}
      >
        <p>Get connected</p>
        <div>
          <img src={facebook.src} width="24" height="24" />
          <img src={instagram.src} width="24" height="24" />
          <img src={twitter.src} width="24" height="24" />
        </div>
      </div>
    </footer>
  </body>
</html>
